<Layout::Column local-class="layout" @full={{true}}>
  <Layout::Row local-class="bottom-right">
    <Typography::Heading @level={{2}}>
      About
    </Typography::Heading>
  </Layout::Row>

  <Layout::Row local-class="cards-section">
    <Layout::Column>
      <Elements::Card local-class="card">
        <Layout::Column @full={{true}}>
          <Typography::Heading @level={{3}}>
            {{this.title}}
          </Typography::Heading>
          <Typography::Content>
            {{this.content}}
          </Typography::Content>
        </Layout::Column>
      </Elements::Card>
    </Layout::Column>
  </Layout::Row>

  <Layout::Row local-class="form-section">
    <Layout::Column>
      <Forms::Label>Give your poem a title</Forms::Label>
      <Forms::Input @onChange={{action this.handleTitle}} />
    </Layout::Column>

    <Layout::Column>
      <Forms::Label>Write your own poem here</Forms::Label>
      <Forms::Textarea @onChange={{action this.handleContent}} />
    </Layout::Column>
  </Layout::Row>

</Layout::Column>