<Layout::Column local-class="layout" @full={{true}}>
  <Layout::Row>
    <Typography::Heading @level={{2}}>
      {{#if this.user_id}}
        Study the Greats, {{this.user_id}}
      {{else}}
        Study the Greats
      {{/if}}
    </Typography::Heading>
  </Layout::Row>

  <Layout::Row local-class="cards-section">
    {{#each this.songs as |song| }}
      <Layout::Column>
        <Elements::Card local-class="card">
          <Layout::Column>
            <Typography::Heading @level={{3}}>
              "{{song.title}}" - {{song.artist}}
            </Typography::Heading>
            <Typography::Content>
              {{song.lyrics}}
            </Typography::Content>
          </Layout::Column>
        </Elements::Card>
      </Layout::Column>
    {{/each}}
  </Layout::Row>

  <Layout::Row local-class="bottom-right">
    <Controls::Button
      @onClick={{action this.handleClick "Home"}}
      @kind="primary"
      >
      Click Me
    </Controls::Button>
  </Layout::Row>

</Layout::Column>