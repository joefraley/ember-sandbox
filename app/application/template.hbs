<section local-class="app">
  <Elements::Header local-class="header">
    <Controls::Link @route="application" @no-styles={{true}} local-class="link">
      <Typography::Heading @level={{1}}>
        My Demo Application
      </Typography::Heading>
    </Controls::Link>
  </Elements::Header>

  <navbar local-class="navbar">
    <nav>
      <Controls::Link @route="route-read">
        <Typography::Text>
          Read
        </Typography::Text>
      </Controls::Link>
    </nav>
    <nav>
      <Controls::Link @route="route-write">
        <Typography::Text>
          Write
        </Typography::Text>
      </Controls::Link>
    </nav>
  </navbar>

  <Layout::Row @full={{true}} local-class="content-container">
    <aside local-class="sidebar">
      <nav>
        <Controls::Tab @route="route-read" @query={{hash user_id="123"}}>
          Link 123
        </Controls::Tab>
      </nav>
      <nav>
        <Controls::Tab @route="route-read" @query={{hash user_id="234"}}>
          Link 234
        </Controls::Tab>
      </nav>
      <nav>
        <Controls::Tab @route="route-read" @query={{hash user_id="345"}}>
          Link 345
        </Controls::Tab>
      </nav>
    </aside>

    <Layout::Column @full={{true}} local-class="main">
      {{outlet}}
    </Layout::Column>
  </Layout::Row>
</section>